extends ../layout

block content
    a(href="/bicicletas") Lista de bicicletas
    br
    br
    br
    h1 Nueva Bicicleta
    br
    br

    div 
    .container
        form(method='post' action=`/bicicletas/${bici.id}/update`)
            .mb-3
                label.form-label(for='id') Id
                input#id.form-control(type='text' name='id' value=bici.id)
            .mb-3
                label.form-label(for='color') Color
                input#color.form-control(type='text' name='color' value=bici.color)
            .mb-3
                label.form-label(for='modelo') Modelo
                input#modelo.form-control(type='text' name='modelo' value=bici.modelo)
            .mb-3
                label.form-label(for='lat') Latitud
                input#lat.form-control(type='text' name='lat' value=bici.ubicacion[0])
            .mb-3
                label.form-label(for='lon') Longitud
                input#lon.form-control(type='text' name='lon' value=bici.ubicacion[1])
            button.btn.btn-primary(type='submit') Ok

    